{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars":[
            "warn",
            {
                "vars":"all",
                "args":"after-used",
                "ignoreRestSiblings":false
            }
        ]
    },
    "ignorePatterns":[
        "tests/"
    ]
}
